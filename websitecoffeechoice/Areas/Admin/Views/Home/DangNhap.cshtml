@model websitecoffeechoice.Models.NguoiDung
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <br />
            <div style="text-align:center; font-size:30px">
                Đăng nhập
            </div>
            <div class="card-body">
                @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.TenNguoiDung)*@
                        Tên đăng nhập
                        @Html.TextBoxFor(m => m.TenNguoiDung, "", new { @class = "form-control", @placeholder = "Tên đăng nhập" })

                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(m => m.MatKhau)*@
                        Mật khẩu
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Đăng Nhập" /> &nbsp;&nbsp;&nbsp;
                        
                    </div>
                }
            </div>
        </div>
    </div>
</div>


