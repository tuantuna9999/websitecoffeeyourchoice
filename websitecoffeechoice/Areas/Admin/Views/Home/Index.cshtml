@model IEnumerable<websitecoffeechoice.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center    ">Danh sách các món ăn </h2>

<p>
    @Html.ActionLink("Thêm món ăn!", "Create")
</p>
@using (Html.BeginForm("Search", "Home", FormMethod.Get))
{
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm..." name="searchString">
        <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search">Tìm kiếm món ăn!</i></button>
        </span>
    </div>
}
<table class="table">
    <tr>
        <th>
            Tên món ăn

        <th>
            Giá bán
        </th>
        <th>
            Nhận xét
        </th>
        @*<th>
                Ảnh
            </th>*@
        <th>
            Loại sản phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Gia) VNĐ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Anh)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSP.TenLoaiSP)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaSP }) |
                @Html.ActionLink("Thông tin chi tiết", "Details", new { id = item.MaSP }) |
                @Html.ActionLink("Xóa món ăn ", "Delete", new { id = item.MaSP })
            </td>
        </tr>
    }


</table>
