@model List< websitecoffeechoice.Models.SanPham >
@{
    ViewBag.Title = "LoaiSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">


        <!-- ============================  FILTER TOP  ================================= -->
        <div class="card mb-3">
            <div class="card-body">
                <ol class="breadcrumb float-left">
                    <li class="btn btn-primary rounded-pill" style="color:white"><a href="~/Home/Index" > << Trở lại</a></li>
                    
                    
                </ol>
            </div> <!-- card-body .// -->
        </div> <!-- card.// -->
        <!-- ============================ FILTER TOP END.// ================================= -->


    
            <main class="col-md-10">


               
                @foreach (var item in Model)
                {
                    <article class="card card-product-list">
                        <div class="row no-gutters">
                            <aside class="col-md-3">
                                <a href="@Url.Action("Detail","Product",new {Id=item.MaSP })" class="img-wrap">
                                    <span class="badge badge-danger"> NEW </span>
                                    <img src="~/Content/images/items/@item.Anh">
                                </a>
                            </aside> <!-- col.// -->
                            <div class="col-md-6">
                                <div class="info-main">
                                    <a href="@Url.Action("Detail","Product",new {Id=item.MaSP })" class="h5 title">@item.TenSP</a>
                                    <div class="rating-wrap mb-2">
                                       @item.Gia VNĐ
                                    </div> <!-- rating-wrap.// -->

                                   
                                     <p>
                                        @item.GhiChu
                                    </p>

                                </div> <!-- info-main.// -->
                            </div> <!-- col.// -->
                            <aside class="col-sm-3">
                                <div class="info-aside">
                                    <div class="price-wrap">
                                        <span class="h5 price">@item.Gia</span>
                                        <small class="text-muted">/VNĐ</small>
                                    </div> <!-- price-wrap.// -->
                                    <small class="text-warning">Paid shipping</small>

                                    <p class="mt-3">
                                        
                                        <a href="@Url.Action("Detail","Product",new {Id=item.MaSP })" class="btn btn-light"><i class="fa fa-heart"></i> Mua ngay! </a>
                                        
                                    </p>

                                   

                                </div> <!-- info-aside.// -->
                            </aside> <!-- col.// -->
                        </div> <!-- row.// -->
                    </article> <!-- card-product .// -->
                }


        </main> <!-- col.// -->

    
</section>

<!-- ========================= SECTION SUBSCRIBE END// ========================= -->
