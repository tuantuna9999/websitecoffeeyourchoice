                                    </a>
                                </li>
                            }
                        </ul>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card.// -->
        </section>
        <div class="col-md-9">
            <ul class="row no-gutters bordered-cols">
                @foreach (var item in Model.ListSanPham.Where(n => n.MaLoaiSP == 1))
                {
                    <li class="col-6 col-lg-3 col-md-4">
                        <a href="#" class="item">
                            <div class="card-body">
                                <figure class="card-product-grid card-sm">
                                    <!--Tạo đường dẫn lấy id sản phẩm để sang trang detail-->
                                    <a href="@Url.Action("Detail","Product",new {Id=item.MaSP })" class="img-wrap">
                                        <img src="~/Content/images/items/@item.Anh">
                                    </a>
                                    <div class="text-wrap p-3">
                                        <a href="@Url.Action("Detail","Product",new {Id=item.MaSP })" class="title">@item.TenSP</a>
                                        
                                        @*@Html.ActionLink(item.TenSP, "Detail", "Product", new { Id = item.TenSP })*@
                                        <div class="price mt-1">@item.Gia VNĐ</div>
                                        <a href="@Url.Action("Detail","Product",new {Id=item.MaSP })" class="btn btn-secondary btn-sm"> Mua ngay! </a>

                                    </div>
                            </figure>
                        </div>
                    </a>
                     </li>
                  }
        </ul>
    </div> <!-- col.// -->


    <article class="my-4">
        <img src="~/Content/images/banners/ad-sm.jpg" class="w-100">
    </article>
</div>
